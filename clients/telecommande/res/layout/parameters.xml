<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/serverip" android:text="@string/default_ip"></EditText>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/serverport" android:text="@string/default_port"></EditText>
    <Button android:layout_height="wrap_content" android:text="OK !" android:layout_width="match_parent" android:id="@+id/ok" ></Button>
</LinearLayout>
